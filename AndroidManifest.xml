<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.jdev.qd" android:versionCode="1" android:versionName="1.0.0">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <uses-sdk android:minSdkVersion="7"/>

    <application android:icon="@drawable/icon" android:label="@string/app_name">

        <receiver android:name=".PhoneStateReceiver">
                <intent-filter>
                    <action android:name="android.intent.action.PHONE_STATE"/>
                </intent-filter>
        </receiver>

        <receiver android:name=".QdWidgetProvider" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/quick_dialer_app_widget_info"/>
        </receiver>

        <service android:name=".services.UpdateService"/>
        <service android:name=".services.MonitorCallLogService"/>
        <service android:name=".services.TurnPageLeftService"/>
        <service android:name=".services.TurnPageRightService"/>
        <service android:name=".services.TapListenerService"/>
        <service android:name=".services.TurnOffService"/>

        <activity android:name=".ui.QDConfigActivity"/>
    </application>

</manifest>
